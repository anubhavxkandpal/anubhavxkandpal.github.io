---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" 
  xmlns:atom="http://www.w3.org/2005/Atom"
  xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd"
  xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>Heart of Reason Podcast</title>
    <description>Philosophical conversations and meditative reflections on consciousness, ethics, beauty, and society by Anubhav Kandpal.</description>
    <link>{{ site.url }}/podcast/</link>
    <atom:link href="{{ site.url }}/podcast/feed.xml" rel="self" type="application/rss+xml" />
    <language>en-us</language>
    <copyright>Â© {{ 'now' | date: "%Y" }} {{ site.author }}</copyright>
    <itunes:author>{{ site.author }}</itunes:author>
    <itunes:summary>Philosophical conversations and meditative reflections exploring the depths of human experience, from consciousness and ethics to beauty and social dynamics.</itunes:summary>
    <itunes:owner>
      <itunes:name>{{ site.author }}</itunes:name>
      <itunes:email>{{ site.email }}</itunes:email>
    </itunes:owner>
    <itunes:explicit>no</itunes:explicit>
    <itunes:category text="Society &amp; Culture">
      <itunes:category text="Philosophy"/>
    </itunes:category>
    <itunes:image href="{{ site.url }}/assets/images/podcast-cover.jpg"/>
    
    {% assign podcast_posts = site.categories.podcast | sort: 'date' | reverse %}
    {% for episode in podcast_posts %}
    <item>
      <title>{{ episode.title | xml_escape }}</title>
      <description>{{ episode.excerpt | strip_html | xml_escape }}</description>
      <content:encoded><![CDATA[{{ episode.content }}]]></content:encoded>
      <link>{{ site.url }}{{ episode.url }}</link>
      <guid isPermaLink="true">{{ site.url }}{{ episode.url }}</guid>
      <pubDate>{{ episode.date | date_to_rfc822 }}</pubDate>
      
      {% if episode.episode_number %}
      <itunes:episode>{{ episode.episode_number }}</itunes:episode>
      {% endif %}
      
      {% if episode.duration %}
      <itunes:duration>{{ episode.duration }}</itunes:duration>
      {% endif %}
      
      {% if episode.audio_url %}
      <enclosure url="{{ episode.audio_url }}" type="audio/mpeg" />
      {% endif %}
      
      <itunes:author>{{ site.author }}</itunes:author>
      <itunes:summary>{{ episode.excerpt | strip_html | xml_escape }}</itunes:summary>
      
      {% if episode.keywords %}
      <itunes:keywords>{{ episode.keywords | join: ', ' }}</itunes:keywords>
      {% endif %}
    </item>
    {% endfor %}
  </channel>
</rss>
